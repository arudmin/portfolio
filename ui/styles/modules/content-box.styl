.content .box {
  overflow: hidden;
	position: relative;
	height: 220px;
	background-size: 100% 100%;
	margin-bottom: 20px;
	text-decoration: none;

	.name {
		background: rgba(0, 0, 0, 0.8);
		color: #fff;
		position: absolute;
		bottom: 0;
		display: block;
		width: 100%;
		height: 30px;
		line-height: 30px;
		text-align: center;
		font-size: 18px;
		text-shadow: 1px 1px 2px #000;
	}
  .name {
    line-height: 30px; 
    i {
      position: absolute;
      right: 5px;
      font-size: 16px;
    }
  }

  .description {
    height: 100%;
    padding: 50px 10px 0px;
    position: relative;
    color: #000;
    top: -100%;
    border-radius: 3px;

    p {
      margin: 10px 0;
      line-height: 1.5;
    }
  }
}

.content .has-details:hover {
  cursor: pointer;
}
