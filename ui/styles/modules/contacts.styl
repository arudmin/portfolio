.contacts {
  li {
    text-align: center; 
    padding: 10px 5px;
    width: 33%;
  }
  i {
    font-size: 48px;
    padding-bottom: 3px;
    display: block;
  }
  .icon-linkedin-rect {
    padding-left: 5px;
  }
  .icon-mail-1 {
    padding-left: 8px;
  }
  a {
    color: color-copy
    transition: color 0.5s;

    &:hover {
      color: color-link
      text-decoration: none;
    }
  }
}
