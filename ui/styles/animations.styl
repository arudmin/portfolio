	transition: opacity 0.5s;
	opacity: 1;
}
.content .anim-out {
	opacity: 0;
}


/* test crazy animation */

//init
.preanim {
	.header {
		.updates {
			transform: translateY(-300px);
		}
	}
	.content .box {
		//transform: scale(0);
    opacity: 0;
	}

	.nav {
		transform: translateX(100%);
	}
}

//start
.load {
	.header {
		.updates {
			transform: translateY(0);
			transition: -webkit-transform 0.5s ease 0.1s;
		}
	}

	.nav {
		transform: translateX(0);
		transition: -webkit-transform 0.4s ease 0.4s;
	}
	.content .box {
		//animation: bounce 0.5s ease 0.5s;
		//animation-fill-mode: forwards;
    opacity: 1;
    transition: opacity 0.5s ease 0.5s;
	}
}

@keyframes bounce {
  0% {
    transform: scale3d(0.1,0.1,1);
  }
  75% {
    transform: scale3d(1.08,1.08,1);
  }
  100% {
    transform: scale3d(1,1,1);
  }
}

.fly-in {
	animation: fly-in 0.3s ease-out;
}
.fly-out {
	animation: fly-out 0.3s ease-out;
}

@keyframes fly-in {
	from {
		opacity: 0;
		transform: translate(-400px, 400px) rotate(-5deg) scale(3);
	}
	to {
		opacity: 1;
		transform: translate(0, 0) rotate(0deg) scale(1);
	}
}

@keyframes fly-out {
	from {
		opacity: 1;
		transform: translate(0, 0) rotate(0deg) scale(1);
	}
	to {
		opacity: 0;
		transform: translate(400px, -400px) rotate(5deg) scale(0);
	}
}
