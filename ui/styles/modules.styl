
/* horizonal list */
ul.hl {
	clearfix();
	list-style: none;
	li {
		float: left;
	}
}

/* box */
.box {
	border-radius: 3px;
	background: #fff;
	box-shadow: 0px 2px 7px -2px #999;
	border: 1px solid lighten(#999, 20%);
}

.content .box {
	position: relative;
	height: 220px;
	background-size: 100% 100%;
	margin-bottom: 20px;
	text-decoration: none;

	.name {
		background: rgba(0, 0, 0, 0.8);
		color: #fff;
		position: absolute;
		bottom: 0;
		display: block;
		width: 100%;
		height: 30px;
		line-height: 27px;
		text-align: center;
		font-size: 18px;
		text-shadow: 1px 1px 2px #000;
	}

}

.updates {
  background: rgba(255,255,255,0.5);
  box-shadow: none;
  border: 1px solid lighten(#999, 40%);

  .title {
    font-size: 16px;
    margin-bottom: 6px;
		a {
			color: color-copy;
		}
  }
  .date {
    float: right;
    margin: 4px 0 0 0;
    font-size: 11px;
    color: #747474;
  }

	.name {
		padding-right: 5px;
		&::after {
			content: ':'
		}
	}
  .desc {
    font-size: 12px;
    line-height: 1.5;
  }
}
