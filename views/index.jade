!!!5
html
  head
    title Greg Allen
    //script(src="ui/vendor/live/live.js")
    link(rel="stylesheet", href="ui/_dist/common.css")
  body.preanim
    div.frame
      div.header.col3
        div.box.col.me
          img(src="ui/images/me.jpg", width="75")
          h1 Greg Allen
          h2 UX/UI, Developer
        div.box.col.updates(data-username=twitter)
          a.date
          h3.title
            a Twitter
          p.desc 
            a.name
            span
        div.box.col.updates(data-username=github)
          a.date
          h3.title
            a Github
          p.desc
            a.name
            span
      ul.nav.hl
        li.all: a(href="#") All
          span.line
        li.site: a(href="#sites") Sites
          span.line
        li.app: a(href="#apps") Apps
          span.line
        li.code: a(href="#code") Code
          span.line
        li.contact: a(href="#contact") Contact
          span.line
      div.content.col4
        for item in items
          a.box.col.fly-in(class="#{item.type} #{item.id || ""}", href=item.url)
            div.description
              if item.description
                for para in item.description
                  p= para
            h3.name= item.name
      script(src="ui/vendor/jquery/jquery-1.7.2.min.js")
      script(src="ui/_dist/common.js") 
